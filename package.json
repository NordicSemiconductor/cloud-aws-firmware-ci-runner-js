{
  "name": "@nordicsemiconductor/firmware-ci-runner-aws",
  "version": "0.0.0-development",
  "description": "Exposes real nRF9160 hardware to be used for end-to-end tests. Runs on AWS.",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js.git"
  },
  "keywords": [
    "nrf-asset-tracker",
    "iot",
    "firmware",
    "end-to-end-testing",
    "aws"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js#readme",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.282.0",
    "@aws-sdk/client-iot": "3.283.0",
    "@aws-sdk/client-iot-data-plane": "3.282.0",
    "@aws-sdk/client-s3": "3.282.0",
    "@aws-sdk/client-sts": "3.282.0",
    "@aws-sdk/s3-presigned-post": "3.284.0",
    "@nordicsemiconductor/cloudformation-helpers": "7.0.7",
    "@nordicsemiconductor/firmware-ci-device-helpers": "13.3.66",
    "@serialport/parser-readline": "10.5.0",
    "aws-iot-device-sdk": "2.2.12",
    "commander": "10.0.0",
    "form-data": "4.0.0",
    "node-fetch": "3.3.0",
    "semver": "7.3.8",
    "serialport": "10.5.0",
    "shell-quote": "1.8.0"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.185",
    "@types/aws-iot-device-sdk": "2.2.4",
    "@types/node": "18.14.6",
    "@types/node-fetch": "3.0.3",
    "@types/semver": "7.3.13",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "chalk": "5.2.0"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga|v[0-9].[0-9].x)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ]
}
