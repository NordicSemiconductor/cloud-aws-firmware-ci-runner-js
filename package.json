{
  "name": "@bifravst/firmware-ci-aws",
  "version": "0.0.0-development",
  "description": "Exposes real nRF9160 hardware to be used for end-to-end tests. Runs on AWS.",
  "main": "./dist/export.js",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/firmware-ci-aws.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bifravst/firmware-ci-aws/issues"
  },
  "homepage": "https://github.com/bifravst/firmware-ci-aws#readme",
  "dependencies": {
    "@aws-sdk/client-iot": "3.2.0",
    "@aws-sdk/client-s3": "3.2.0",
    "@aws-sdk/client-sts": "3.2.0",
    "@aws-sdk/s3-presigned-post": "3.2.0",
    "@bifravst/firmware-ci": "5.0.1",
    "@serialport/parser-readline": "9.0.1",
    "aws-iot-device-sdk": "2.2.6",
    "commander": "6.2.1",
    "form-data": "3.0.0",
    "node-fetch": "2.6.1",
    "serialport": "9.0.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.134",
    "@bifravst/eslint-config-typescript": "5.0.87",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@types/aws-iot-device-sdk": "2.2.2",
    "@types/chalk": "2.2.0",
    "@types/commander": "2.12.2",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.21",
    "@types/node-fetch": "2.5.7",
    "@types/serialport": "8.0.1",
    "@types/uuid": "8.3.0",
    "chalk": "4.1.0",
    "eslint": "7.17.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npx jest --onlyChanged"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_client",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
