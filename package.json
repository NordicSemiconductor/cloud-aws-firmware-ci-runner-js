{
  "name": "@nordicsemiconductor/firmware-ci-runner-aws",
  "version": "0.0.0-development",
  "description": "Exposes real nRF9160 hardware to be used for end-to-end tests. Runs on AWS.",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "AssetTracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js#readme",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.30.0",
    "@aws-sdk/client-iot": "3.30.0",
    "@aws-sdk/client-iot-data-plane": "3.30.0",
    "@aws-sdk/client-s3": "3.30.0",
    "@aws-sdk/client-sts": "3.30.0",
    "@aws-sdk/s3-presigned-post": "3.30.0",
    "@nordicsemiconductor/cloudformation-helpers": "6.1.3",
    "@nordicsemiconductor/firmware-ci-device-helpers": "11.0.1",
    "@serialport/parser-readline": "9.0.7",
    "aws-iot-device-sdk": "2.2.11",
    "commander": "8.2.0",
    "form-data": "4.0.0",
    "node-fetch": "3.0.0",
    "semver": "7.3.5",
    "serialport": "9.2.1",
    "shell-quote": "*",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-angular": "13.1.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "9.1.0",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "8.1.2",
    "@types/aws-iot-device-sdk": "2.2.3",
    "@types/node": "16.7.10",
    "@types/node-fetch": "3.0.2",
    "@types/semver": "7.3.8",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "@types/uuid": "8.3.1",
    "chalk": "4.1.2",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "pinst": "2.1.6",
    "prettier": "2.4.0",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga|v[0-9].[0-9].x)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ]
}
