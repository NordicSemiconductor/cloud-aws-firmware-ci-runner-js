{
  "name": "@nordicsemiconductor/firmware-ci-runner-aws",
  "version": "0.0.0-development",
  "description": "Exposes real nRF9160 hardware to be used for end-to-end tests. Runs on AWS.",
  "bin": "./cli/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "AssetTracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-firmware-ci-runner-js#readme",
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.42.0",
    "@aws-sdk/client-iot": "3.42.0",
    "@aws-sdk/client-iot-data-plane": "3.42.0",
    "@aws-sdk/client-s3": "3.42.0",
    "@aws-sdk/client-sts": "3.42.0",
    "@aws-sdk/s3-presigned-post": "3.42.0",
    "@nordicsemiconductor/cloudformation-helpers": "6.1.20",
    "@nordicsemiconductor/firmware-ci-device-helpers": "11.1.2",
    "@serialport/parser-readline": "9.2.4",
    "aws-iot-device-sdk": "2.2.11",
    "commander": "8.3.0",
    "form-data": "4.0.0",
    "node-fetch": "3.1.0",
    "semver": "7.3.5",
    "serialport": "9.2.7",
    "shell-quote": "1.7.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "9.2.24",
    "@types/aws-iot-device-sdk": "2.2.3",
    "@types/node": "16.11.10",
    "@types/node-fetch": "3.0.3",
    "@types/semver": "7.3.9",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "@types/uuid": "8.3.3",
    "chalk": "4.1.2"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga|v[0-9].[0-9].x)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ]
}
